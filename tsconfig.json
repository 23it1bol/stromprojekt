{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "controllers",
    "routes",
    "models",
    "utils",
    "middleware",
    "scripts"
  ],
  "exclude": ["node_modules", "dist", "tmp_uploads"]
}
